{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/components/**/*.ts",
    "src/components/**/*.d.ts",
    "src/components/**/*.tsx",
    "src/components/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
